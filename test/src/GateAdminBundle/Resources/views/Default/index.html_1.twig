
{% extends 'base.html.twig' %}
{% block title %} Prisijungimas {% endblock %}

{% block body  %}
    
<div >
  
<nav>
    <div id = 'divleft'>
    </div>
    <div id = 'divright'>
    hi {{Admin.name}}
    hi {{Admin.id}}
    hi {{Admin.password}}
<a href="{{path('gate_admin_logout')}}" class="btn btn-default">Logout</a>
</div>
</nav>

<main>
    <h1>Registruotų asmenų sąrašas</h1>
     <button type="button" class="btn btn-default" data-toggle="modal" data-target="#addPerson">Priminti</button>
    <table class="table table-striped">
  <tr>
    <th>Vardas</th>
    <th>Tel. Numeris</th>
    <th>Adresas</th>
  </tr>
   
   {% for person in People %} 
  <tr>
    <td>{{person.fullName}}</td>
    <td>{{person.phoneNumber}}</td>
    <td>{{person.adress}}</td>
    <td>
    <form action="{{ path('gate_admin_personprofile1')}}" methode="POST">
    <input type="hidden" id="id" name="id" value="{{person.id}}"/>
    <button role="submit">
    </form>
  </tr>
 {% endfor %}
    </table>
</main>

<footer></footer>

</div>
    
    
    
    <div class="modal fade" id="addPerson" role="dialog">
    <div class="modal-dialog">
           <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Siųsti Priminimą</h4>
        </div>
        <div class="modal-body" style="height: 800px;">
    
    
        {{ form_start(newPersonForm, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(newPersonForm)}}
            
       <div class = "form-group"  >
           
         {{ form_label(newPersonForm.fullName) }}
         {{ form_errors(newPersonForm.fullName) }}
         <div class = "col-xs-3 " >
         {{ form_widget(newPersonForm.fullName) }}
         </div>
       </div>
          <div class = "form-group"  >
           
         {{ form_label(newPersonForm.phoneNumber) }}
         {{ form_errors(newPersonForm.phoneNumber) }}
         <div class = "col-xs-3 " >
         {{ form_widget(newPersonForm.phoneNumber) }}
         </div>
       </div>
        <div class = "form-group"  >
           
         {{ form_label(newPersonForm.adress) }}
         {{ form_errors(newPersonForm.adress) }}
         <div class = "col-xs-3 " >
         {{ form_widget(newPersonForm.adress) }}
         </div>
       </div>
        
         <div class = "form-group" >
         <div class = "form-group">
        <div style="  margin-left: 50%;">
        {{ form_widget(newPersonForm.save) }}
        
         
       </div>
         </div>
          {{ form_end(newPersonForm) }}
  
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Uždaryti</button>
        </div>
      </div>
      
    </div>
  </div>
  
{% endblock %}